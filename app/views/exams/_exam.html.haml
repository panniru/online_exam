%table.table.table-condensed
  %thead
    %th Course
    %th Subject
    %th Semester
    %th Exam Duration(Hrs)
    %th Total Questions
  %tbody
    %tr
      %td= data.course.name
      %td= data.subject
      %td= data.semester
      %td= data.duration
      %td= data.no_of_questions

.col-md-5
  %table.table.table-bordered
    %thead
      %th Criteria
      %th Description
    %tbody
      %tr.success
        %td= data.pass_criteria_1
        %td= data.pass_text_1
      %tr.info
        %td= data.pass_criteria_2
        %td= data.pass_text_2
      %tr.warning
        %td= data.pass_criteria_3
        %td= data.pass_text_3
      %tr.danger
        %td= data.pass_criteria_4
        %td= data.pass_text_4
.col-md-5
  %table.table.table-bordered
    %tbody
      %tr.info
        %th= "Negative Mark"
        %td= data.negative_mark
      %tr.info
        %th= "Multiple Question"
        %td= data.multiple_choice
      %tr.warning
        %th= "Fill in the blanks"
        %td= data.fill_in_blanks
