.page-header
  .row
    %h2
      .col-md-8
        %small= @question.description
      .col-md-offset-8
        = link_to "Edit", send("edit_exam_#{@question.class.name.tableize.singularize}_path".to_sym, @exam, @question), :class => "btn btn-primary"
        = link_to "Delete", send("exam_#{@question.class.name.tableize.singularize}_path".to_sym, @exam, @question), :class => "btn btn-danger", :data => { :confirm => 'Are you sure?', :method => :delete }
        = link_to "Add Question", send("new_exam_multiple_choice_question_path".to_sym, @exam), :class => "btn btn-success"
