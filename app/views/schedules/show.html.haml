.page-header
  %h3
    = @schedule.exam_name
    .pull-right
      - unless current_user.student?
        = link_to "Edit", edit_schedule_path(@schedule), :class => "btn btn-success"
        = link_to "Delete", @schedule, :class => "btn btn-danger", :data => {:confirm => "Are You Sure?", :method => :delete}

= render partial: "single_schedule", :locals => {:schedule => @schedule}

- if current_user.student? and schedule_results.present?
  .page-header
    %h3 Result
  = render :partial => "result", :locals => {:result => schedule_results}
