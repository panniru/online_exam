.page-header
  %h3
    = @schedule.exam_name
    .pull-right
      - unless current_user.student?
        = link_to "Edit", edit_schedule_path(@schedule), :class => "btn btn-success"
        = link_to "Delete", @schedule, :class => "btn btn-danger", :data => {:confirm => "Are You Sure?", :method => :delete}

%table.table.table-bordered
  %thead
    %th Registration Date
    %th Exam Date and Time
    %th Exam End Time
    - unless current_user.student?
      %th Access Password

  %tbody
    %tr
      %td= @schedule.schedule_date
      %td= @schedule.formatted_exam_date_time
      %td= @schedule.end_time
      - unless current_user.student?
        %td= @schedule.access_password

- if current_user.student? and schedule_results.present?
  .page-header
    %h3 Result
  = render :partial => "result", :locals => {:result => schedule_results}
