.navbar.navbar-inverse
  .navbar-inner.container
    .col-sm-7
      .navbar-header
        .navbar-brand= link_to "Online Exam", "#", :class => "navbar-brand"
    .col-sm-5.sign-in-padding
      - if user_signed_in?
        = render "shared/global_search"
        %ul.nav.navbar-nav
          %li.dropdown
            = link_to raw("<i class = 'glyphicon glyphicon-user'></i> &nbsp;&nbsp;#{current_user.user_id} <b class='caret'></b>"), "#", "data-toggle" => "dropdown", :class => 'dropdown-toggle'
            %ul.dropdown-menu
              %li
                = link_to "Sign Out", destroy_user_session_path, :data => {:method => :delete}
                = link_to "Change Password", edit_user_path(current_user)
        #application-timer
