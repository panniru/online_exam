%ul.nav.nav-pills.nav-stacked
  - navigation_list.each do |item|
    - active_class = ''
    - active_class = 'active' if item.is_active
    %li{:class => active_class, :id => "#{item.item}"}
      - if item.item == 'Users'
        = link_to raw("<i class = '#{item.icon}'></i> #{item.item}"), "#collapseUser", :data => { :toggle => "collapse", :parent => "#accordion"}
        #collapseUser.panel-collapse.collapse.in
          %ul.nav.nav-pills.nav-stacked
            %li{:class => faculty.is_active ? "active" : ""}
              = link_to raw("<i class = '#{faculty.icon}'></i> #{faculty.item}"), faculty.link
            %li{:class => students.is_active ? "active" : ""}
              = link_to raw("<i class = '#{students.icon}'></i> #{students.item}"), students.link
            %li{:class => admin.is_active ? "active" : ""}
              = link_to raw("<i class = '#{admin.icon}'></i> #{admin.item}"), admin.link
      - else
        %a{ :href =>  item.link}
          %i{ :class => item.icon }
            = item.item
