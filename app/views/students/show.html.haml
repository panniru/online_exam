.page-header
  %h3
    = @student.name
    .pull-right
      = link_to "Edit", edit_student_path(@student), :class => "btn btn-success"
      = link_to "Delete", student_path(@student), :class => "btn btn-danger", :data => {:confirm => "Are You Sure?", :method => :delete}
.col-md-5
  %table.table.table-bordered
    %tbody
      %tr
        %td.active Name
        %td= @student.name
      %tr
        %td.active Course
        %td= @student.course_name
      %tr
        %td.active Semester
        %td= @student.semester
      %tr
        %td.active Email
        %td= @student.user.try(:email)
